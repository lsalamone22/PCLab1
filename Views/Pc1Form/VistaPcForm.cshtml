 @model PCLab1.Models.Curso; 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>




</head>
<body>
    <h1 style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">Welcome back to a new semester!</h1>
<br />
    <h2 style="font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">--You can register on the following courses--</h2>
<br />
<form asp-controller="Pc1Form" asp-action="create">

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="col-sm-8 col-sm-offset-2">
  <div class="mb-3 row">
    <label asp-for="nombre" class="control-label"  style="font-size: 30px; font-weight: bold"> </label> 
    <div class="col-sm-10">
      <input asp-for="nombre" class="form-control" > </input>
    </div>
  </div>
</div>
<br />

<div class="col-sm-8 col-sm-offset-3">
    <div class="mb-3 row">
      <strong><label asp-for="apellido" class="control-label" style="font-size: 30px; font-weight: bold" > </label> </strong>
      <div class="col-sm-10">
        <input asp-for="apellido" class="form-control" > </input>
      </div>
    </div>
 </div>
<br />

 

 <br />

  <div class="col-sm-8 col-sm-offset-2">
        <div class="col-sm-8 col-sm-offset-2">
         <h2><strong><label for="radio-button" tyle="font-size: 30px; font-weight: bold">Course</label></strong></h2>
        </div>
        <h4 tyle="font-size: 5px; font-weight: bold", style="font-family: Verdana, Geneva, Tahoma, sans-serif;">--Each course has 3 credits for 100 soles per credit--</h4>
 </div>  

<!-- CURSO CHECKBOX -->
 <div style="font-size: medium;">
<!-- para guardar el valor -->
@for (int i = 0; i < Model.CursoList.Count; i++)
{
  <div style="font-size: large; font-family: Arial, Helvetica, sans-serif;"> 
        @Html.HiddenFor(model => Model.CursoList[i].Type) <!-- para guardar el valor DE CURSO-->

        @Html.CheckBoxFor(model => Model.CursoList[i].active, new { id = "curso" + Model.CursoList[i].ID })
        
        @Html.LabelFor(model => Model.CursoList[i].active, Model.CursoList[i].Type)
    </div> 
}

 </div>

    <button type="submit" class="btn btn-primary">Submit</button> 
   <footer></footer> 
</form>



</body>
</html>